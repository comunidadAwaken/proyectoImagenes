extends ./layout.jade
block contenido
	div(class="container")
		form(action="/users", method="POST")
			div(class="form-group")
				label(for="email") Email
				input(type="text" name="email" placeholder="Email" id="email" class="form-control")
			div(class="form-group")
				label(for="pass") Contraseña
				input(type="password" name="pass" placeholder="password" id="pass"  class="form-control")
			div(class="form-group")
				label(for="password_confirmation") Confirma tu contraseña
				input(type="password" name="password_confirmation" placeholder="password" id="password_confirmation"  class="form-control")
			div(class="form-group")
				input(type="submit" value="Iniciar Sesion"  class="btn btn-info")